<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <ImageView
        android:id="@+id/firend_image"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:padding="8dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/firend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/firend_image"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/firend_image"
        android:text="李老师"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/firend_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/firend_image"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/firend_image"
        android:ellipsize="end"
        android:textColor="#bab7b7"
        android:maxLines="1"
        android:text="今天下午在B2—212开全体大会"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/firend_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9月25日 10:20"
        android:textSize="10sp"
        android:textColor="#bab7b7"
        android:layout_alignTop="@+id/firend_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
